/**index.wxss**/
.index_container{
  width:690rpx;
  height: 96.7%;
  background-color: #f0f2f7;
  padding:30rpx 30rpx 0 30rpx; 
  position: absolute;
}
.index_container .select{
  text-align: center;
  margin: 30rpx 0;
}

 .img image{
  width:690rpx;
  height: 914rpx;
} 

.select image{
  width:110rpx;
  height: 150rpx;
  margin-right:14rpx;
}
.select:last-child{
  margin-right: 0;
}
.complete{
  text-align: center;
  font-size: 36rpx;
  color:#fff;
  width:690rpx;
  background-color: #4DCD70;
  margin-top:30rpx;
}

/*提示框  */
.model{
  width:500rpx;
  height:330rpx;
  background-color: #fff;
   text-align: center; 
  padding:0 30rpx;
  position: fixed;
  left:50%;
  margin-left:-280rpx;
  top:50%;
  margin-top:-165rpx;
  z-index:5;
  border-radius: 20rpx;
}
.model_title{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color:#444C52;
}
.model_content{
  height: 120rpx;
  font-size:28rpx;
  text-align: left;
  color:#444C52;
}
.model_result{
  font-size:36rpx;
  color:#4DCD70;
}
.mask{
  width:100%;
  height: 100%;
  position: fixed;
  background: #000;
  opacity: 0.7;
  left:0;
  bottom:0;
  z-index:4;
}