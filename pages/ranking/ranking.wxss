/* pages/ranking/ranking.wxss */
 @import "../join/join.wxss"; 
.rank_image_wrap{
  height: 177rpx;
  position: relative;
}
.rank_image_wrap image{
  width:750rpx;
  height: 177rpx;
}
.rank_text_top{
  position: absolute;
  left:309rpx;
  top:44rpx;
}
.rank_text_top_title{
  font-size: 40rpx;
  color: #444D52;
}
.rank_text_top_p{
  font-size:24rpx;
  color:#828D93;
  margin-top:15rpx;
}

.userinfo image{
  width:70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right:28rpx;
}
.total_day{
  font-size:40rpx;
  color:#FEC329;
}
.userinfo text{
  font-size:32rpx;
  color:#828D93;
}
.name text,.myinfo view{
  text-overflow: ellipsis; 
  overflow: hidden;
  max-width:150px;
  max-height: 120rpx; 
  display: inline-block;
   vertical-align: middle; 
}
.myinfo view{
  display: block;
}
.rank_each image{
  width:44rpx;
  height: 50rpx;
  margin-right:28rpx; 
  vertical-align: middle;
}
.rank_each .rank_num{
  width:40rpx;
  height: 56rpx;
  margin-right:28rpx;
  display: inline-block;
  text-align: center;
  font-size:40rpx;
  color:#ABB5BC;
}
.rank_list_wrap{
  display: flex;
  height: 120rpx;
  line-height: 120rpx;
  padding:0 30rpx;
  width:690rpx;
  border-bottom:1rpx solid #DEDFE5;
}
.rank_list_wrap:last-child{
  border-bottom: none;
}
.userinfo{
flex-grow: 1;
overflow: hidden;
}

/*我的排名  */
 .my_rank_wrap .my_rank{
  width: 750rpx;
  height: 170rpx;
  position: fixed;
  bottom:0;
  background-image:-webkit-linear-gradient(left,rgb(252,125,107) 0%,rgb(250,58,116) 69%,rgb(250,58,116) 100%);
}
.my_rank_list{
  width:690rpx;
  padding: 0 30rpx;
  display: flex;
}
.my_totaday image{
  width:26rpx;
  height: 28rpx;
  margin-left:5rpx;
}

.my_img image{
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  margin-right:30rpx;
  margin-top:30rpx;
  border:4rpx solid #fff;
}
.myinfo{
  flex-grow: 1;
  color: #fff;
  font-size: 32rpx;
   margin-top:40rpx;
}
.my_totaday{
  line-height: 170rpx;
  color: #fff;
  font-size: 70rpx;
}

.rank_list{
  /* padding-bottom:50rpx; */
}
.rank_wrap_t{
  padding-bottom:170rpx;
}
.switch{
  height: 96rpx;
  line-height: 96rpx;
  font-size:32rpx;
  color:#ABB5BC;
  display: flex;
}
.switch view{
   /* flex-grow: 0.4;   */
  position: relative;
  height: 100%;
  width:140rpx;
}
.switch view:first-child{
  margin-left:200rpx;
  margin-right:100rpx;
  text-align: center;
}
.active{
   color:#444E53;
}
.active:after{
  content:'';
  display: inline-block;
  width:32rpx;
  height:6rpx;
  background: #FA3A74;
  position: absolute;
  bottom:0;
  left:50%;
   margin-left: -16rpx;  

}